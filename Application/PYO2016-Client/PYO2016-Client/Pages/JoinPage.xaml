<UserControl x:Class="PYO2016_Client.Pages.JoinPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-400,50,0" Text="PYO 2016" FontSize="90"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-30,0,0">
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
            <TextBox x:Name="idText" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="0,21,0,0"/>
            <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Margin="0,49,0,0"/>
            <PasswordBox x:Name="pwText" HorizontalAlignment="Left" Height="23"  VerticalAlignment="Top" Width="200" Margin="0,67,0,0"/>
            <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Confirm Password" VerticalAlignment="Top" Margin="0,95,0,0"/>
            <PasswordBox x:Name="confirmText" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="0,116,0,0" />
        </Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,210,0,20">
            <Button x:Name="JoinBtn" Content="Join" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="JoinBtn_Click"/>
        </Grid>
    </Grid>
</UserControl>
